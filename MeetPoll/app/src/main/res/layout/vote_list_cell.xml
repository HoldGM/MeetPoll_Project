<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="goTomap">

    <ImageView
        android:id="@+id/vote_icon"
        android:src="@drawable/maps_location_icon"
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight=".7"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/vote_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/event_text_size"/>
        <TextView
            android:id="@+id/vote_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:singleLine="true"
            android:layout_below="@id/vote_name"/>
        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_below="@id/vote_address"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="true"
            android:layout_toRightOf="@+id/rating_text"
            android:layout_alignBottom="@+id/rating_text"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            style="?android:attr/ratingBarStyleSmall"/>
    </RelativeLayout>
        <RadioButton
            android:id="@+id/vote_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"/>

</LinearLayout>